<div id="orderModal" class="modal" style="color:black;">

    <div class="modal-content"  style="width: 500px; height: 800px; background-image: url(https://www.kishrey-teufa.co.il/clients/kishreyteufa/gallery/Website_General/Flights/Plane9_750520.jpg); background-size: cover;">
        <form id="order_flight_form">
            <a class="btn-close" type="button"  aria-label="Close" style="color:white;"> </a></button>

            <label for="flightID" style="text-align: left; background-color: khaki;">Flight ID:</label>
            <input type="text" id="oflightID" name="flightID" readonly style="width: 200px; background-color: white;"><br>

            <label for="flightNumber" style="text-align: left; background-color: khaki;">Flight Number:</label>
            <input type="number" id="oflightNumber" name="flightNumber" readonly style="width: 200px; background-color: white;"><br>

            <label for="flightDate" style="text-align: left; background-color: khaki;">Flight Date:</label>
            <input type="date" id="oflightDate" name="flightDate" value="<%= new Date().toISOString().slice(0, 10) %>" readonly style="width: 200px; background-color: white;"><br>

            <label for="hour" style="text-align: left; background-color: khaki;">Hour:</label>
            <input type="time" id="ohour" name="hour" readonly style="width: 200px; background-color: white;"><br>

            <label for="Gate" style="text-align: left; background-color: khaki;">Gate:</label>
            <input type="text" id="oGate" name="Gate" readonly style="width: 200px; background-color: white;"><br>

            <label for="Destination" style="text-align: left; background-color: khaki;">Destination:</label>
            <input type="text" id="oDestination" name="Destination" readonly style="width: 200px; background-color: white;"><br>

            <label for="Origin" style="text-align: left; background-color: khaki;">Origin:</label>
            <input type="text" id="oOrigin" name="Origin" value="Israel" readonly style="width: 200px; background-color: white;"><br>

            <label for="flightPrice" style="text-align: left; background-color: khaki;">Flight Price:</label>
            <input type="number" id="oflightPrice" name="flightPrice" readonly style="width: 200px; background-color: white;"><br>

            <label for="ArrivingDate" style="text-align: left; background-color: khaki;">Arriving Date:</label>
            <input type="date" id="oArrivingDate" name="ArrivingDate" value="<%= new Date().toISOString().slice(0, 10) %>" readonly style="width: 200px; background-color: white;"><br>

            <label for="NumberOfSeats" style="text-align: left; background-color: khaki;">Number of Seats:</label>
            <input type="number" id="oNumberOfSeats" name="NumberOfSeats" readonly style="width: 200px; background-color: white;"><br>

            <label for="ArrivingHour" style="text-align: left; background-color: khaki;">Arriving Hour:</label>
            <input type="time" id="oArrivingHour" name="ArrivingHour" readonly style="width: 200px; background-color: white;"><br>
            <h3 style="text-align: left; background-color: khaki; padding: 5px;">Payment Information:</h3>

            <label for="cardName" style="text-align: left; background-color: khaki;">Cardholder Name:</label>
            <input type="text" id="cardName" name="cardName" required style="width: 200px; background-color: white;"><br>

            <label for="cardNumber" style="text-align: left; background-color: khaki;">Card Number:</label>
            <input type="text" id="cardNumber" name="cardNumber" required pattern="\d{16}" title="Please enter a 16-digit card number" style="width: 200px; background-color: white;"><br>

            <label for="expiryDate" style="text-align: left; background-color: khaki;">Expiry Date:</label>
            <input type="month" id="expiryDate" name="expiryDate" required style="width: 200px; background-color: white;"><br>

            <label for="cvv" style="text-align: left; background-color: khaki;">CVV:</label>
            <input type="text" id="cvv" name="cvv" required pattern="\d{3}" title="Please enter a 3-digit CVV code" style="width: 200px; background-color: white;"><br>
            <%- include('../flights/signatureCanvas.ejs') %>

            <button type="submit" id="order_flight">Order Flight</button>
        </form>

    </div>
</div>